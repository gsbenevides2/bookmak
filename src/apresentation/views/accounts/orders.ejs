<html>

<head>
  <title>bookmak</title>
  <!--Meta Tags-->
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!--Bootstrap CSS-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
  <!--Header-->
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a href="/" class="navbar-brand">Bookmak</a>
        <a href="/checkout/cart" class="btn btn-outline-light">Carrinho</a>
      </div>
    </nav>
  </header>
  <!--Conteudo-->
  <main class="container">
    <div class="row">
      <h1 class="mt-3 text-center col-12">Pedidos</h1>
      <p class="mt-3 text-center col-12">
        <% const message=orders.length> 0 ?
          "OlÃ¡ veja os seus pedidos a seguir:" : "Nenhum pedido encontrado." %>
        <%= message %>

      </p>
      <% orders.forEach(order=> { %>
      <div class="col-12">
        <div class="mt-3 border p-3 row">
          <div class="col-6 mb-2">
            <strong>Pedido:</strong><%-order.id %>
          </div>
          <div class="col-6">
            <strong>Status:</strong>
            <%- utils.orderUpdate.formatStatus(utils.orderUpdate.sort(order.updates)[0].status) %>
          </div>

          <a href="/accounts/me/orders/<%- order.id %>" class="btn btn-outline-dark col-2">Ver Detalhes</a>
        </div>
      </div>
      <% }) %>
    </div>
  </main>
  <!--Bootstrap JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>