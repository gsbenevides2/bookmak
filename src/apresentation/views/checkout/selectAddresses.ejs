<html lang="pt-br">

<head>
  <title>bookmak</title>
  <!--Meta Tags-->
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!--Bootstrap CSS-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/checkout.css" />
</head>

<body>
  <!--Header-->
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a href="/" class="navbar-brand">Bookmak</a>
      </div>
    </nav>
  </header>
  <!--Conteudo-->
  <main class="container mb-5">
    <h1 class="mt-3 text-center mb-3">Endereços de Cobrança e Envio</h1>
    <% if(error) { %>
    <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>
    <!---->
    <form method="POST">
      <p class="mt-0 mb-1">
        Escolha um dos endereços cadastrados ou cadastre um novo
      </p>
      <div class="mb-3">
        <label for="deliveryAddress" class="form-label">Escolha um endereço para envio:</label>
        <select class="form-select" id="deliveryAddress" name="deliveryAddress">
          <% addresses.forEach((address) => { %>
          <option value="<%= address.id %>" <%- address.id === addressSettings.deliveryAddress.id ? "selected" : ""%>>
            <%= address.nickname %>
          </option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="billingAddress" class="form-label">Escolha um endereço para cobrança:</label>
        <select class="form-select" id="billingAddress" name="billingAddress">
          <% addresses.forEach((address) => { %>
          <option value="<%= address.id %>" <%- address.id === addressSettings.billingAddress.id ? "selected" : ""%>>
            <%= address.nickname %>
          </option>
          <% }) %>
        </select>
      </div>
      <div class="d-flex gap-2">
        <a href="/accounts/me/addresses/new" target="_blank" class="btn btn-outline-dark">
          Novo Endereço
        </a>
        <button type="button" class="btn btn-outline-dark" onclick="window.location.reload()">
          Recarregar Endereços
        </button>
        <button type="submit" class="btn btn-primary">Continuar</button>
      </div>
    </form>
  </main>
  <!--Bootstrap JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>