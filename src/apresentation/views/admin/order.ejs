<html lang="pt-br">

<head>
  <title>bookmak</title>
  <!--Meta Tags-->
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!--Bootstrap CSS-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/checkout.css" />
</head>
<style>
  .book-cover {
    width: 100px;
    height: 150px;
    object-fit: cover;
  }
</style>

<body>
  <!--Header-->
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a href="/" class="navbar-brand">Bookmak</a>
      </div>
    </nav>
  </header>
  <!--Conteudo-->
  <main class="container mb-5">
    <h1 class="mt-3 text-center">Detalhes do Pedido</h1>

    <!--Status-->
    <%- include('../components/orderDetails/statusViewer', { order, userType: "admin" }) %>
    <!--Lista de Produtos-->
    <%- include('../components/orderDetails/productList', { order }) %>
    <!--Dados do Cliente-->
    <%- include('../components/orderDetails/clientData', { customer: order.customer }) %>
    <!--Endereço de Envio e Cobrança-->
    <%- include('../components/orderDetails/addressData', { billingAddress: order.billingAddress, shippingAddress: order.shippingAddress, enableEdit: false }) %>
    <!--<Marca Página-->
    <%- include('../components/orderDetails/bookmark', { 
          bookmarkText: order.bookmarkText,
          bookmarkStyle: order.bookmarkStyle,
          enableEdit: false,
          enablePrint: true
        }) %>
    <!--Cupom-->
    <%- include('../components/orderDetails/coupon', { order, enableEdit:false }) %>
    <!--Resumo-->
    <%- include('../components/orderDetails/summarizer', { order }) %>
    <!--Pagamento-->
    <%- include('../components/orderDetails/paymentView', { order }) %>
  </main>
  <!--Bootstrap JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>