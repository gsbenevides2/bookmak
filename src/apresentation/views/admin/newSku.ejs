<!DOCTYPE html>
<html lang="pt-br">

<head>
  <title>bookmak</title>
  <!--Meta Tags-->
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!--Bootstrap CSS-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <script src="https://cdn.jsdelivr.net/npm/use-bootstrap-tag@2.2.0/dist/use-bootstrap-tag.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/use-bootstrap-tag@2.2.0/dist/use-bootstrap-tag.min.css" rel="stylesheet">
</head>

<body>
  <!--Header-->
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a href="/" class="navbar-brand">Bookmak</a>
      </div>
    </nav>
  </header>
  <!--Conteudo-->
  <div class="container mb-5">
    <h1 class="mt-3 text-center col-12">Novo Capitulo/Volume</h1>

    <form class="mb-3" method="POST" enctype="multipart/form-data">
      <div class="input-group">
        <label class="input-group-text" for="title">Título</label>
        <input type="text" class="form-control" name="title" placeholder="Título do livro" value="" />
      </div>
      <div class="input-group mt-3">
        <label class="input-group-text" for="description">Descrição</label>
        <textarea type="text" class="form-control" name="description" placeholder="Descrição do livro" rows="5"></textarea>
      </div>
      <div class="input-group mt-3">
        <label for="stock_quantity" class="input-group-text">Quantidade em Estoque</label>
        <input type="number" class="form-control" name="stockQuantity" id="stock_quantity" value="" />
      </div>
      <div class="input-group mt-3">
        <label for="price" class="input-group-text">Preço</label>
        <input type="string" class="form-control" name="price" id="price" value="" />
      </div>
      <div class="d-flex gap-1">
        <div class="input-group mt-3 d-flex flex-column align-items-center">
          <button class="btn btn-dark rounded w-100" type="button" id="coverInputBtn">Subir Imagem de Cover</button>
          <label class="input-group-text d-none" for="coverInput">Enviar arquivo de capa</label>
          <input type="file" class="form-control d-none" id="coverInput" name="cover" accept="image/png, image/jpeg">
          <image class="d-block d-none w-100 mt-1" style="max-width: 500px;" id="coverPreview" />
        </div>
      </div>
      <button class="btn btn-dark col-12 mt-3" type="submit">
        Salvar
      </button>
    </form>
    </main>
</body>
<script src="/scripts/newSku.js"></script>
<script src="/scripts/maskValue.js"></script>
<script>
  loadValueMasker('price');
</script>

</html>