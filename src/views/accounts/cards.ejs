<html>
  <head>
    <title>bookmak</title>
    <!--Meta Tags-->
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Bootstrap CSS-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!--Header-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a href="/" class="navbar-brand">Bookmak</a>
          <a href="/checkout/cart" class="btn btn-outline-light">Carrinho</a>
        </div>
      </nav>
    </header>
    <!--Conteudo-->
    <main class="container">
      <div class="row">
        <h1 class="mt-3 text-center col-12">Cartões</h1>
        <p class="mt-3 text-center col-12">
          Olá veja os seus cartões a seguir:
        </p>
        <a href="/accounts/me/cards/new" class="btn btn-dark col-12 mt-3">
          Novo Cartão
        </a>
        <!--Lista de Cartões-->
        <div class="col-12">
          <% cards.forEach(function(card) { %>
          <div class="mt-3 border p-3 row">
            <div class="col-6 mb-2">
              <strong>Número do Cartão:</strong>
              <%= card.cardNumber %>
            </div>
            <div class="col-6">
              <strong>Bandeira:</strong>
              <%= card.cardBrand %>
            </div>
            <div class="col-6">
              <strong>Nome:</strong>
              <%= card.cardName %>
            </div>
            <div class="col-3">
              <strong>Vencimento:</strong>
              <%= card.cardExpiry %>
            </div>

            <div class="col-3">
              <strong>CVV:</strong>
              <%= card.cardCVV %>
            </div>
            <form
              method="POST"
              action="/accounts/me/cards/<%= card.id %>/delete"
              class="col-12 mt-2 row justify-content-end mb-0"
            >
              <button type="submit" class="btn btn-danger col-1">
                Excluir
              </button>
            </form>
          </div>
          <% }) %>
        </div>
      </div>
      <% if(success) { %>
      <div class="alert alert-success mt-3 row" role="alert">
        <%= success %>
      </div>
      <% } %>
      <% if(error) { %>
      <div class="alert alert-danger mt-3 row" role="alert"><%= error %></div>
      <% } %>
    </main>
    <!--Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
