<html lang="pt-br">
  <head>
    <title>bookmak</title>
    <!--Meta Tags-->
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Bootstrap CSS-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/styles/books.css" rel="stylesheet" />
  </head>
  <body>
    <!--Header-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a href="/" class="navbar-brand">Bookmak</a>
          <div class="d-flex justify-content-end gap-1">
            <a href="/accounts/me" class="btn btn-outline-light">Minha Conta</a>
            <a href="/checkout/cart" class="btn btn-outline-light">Carrinho</a>
          </div>
        </div>
      </nav>
    </header>
    <!--Conteudo-->
    <main class="container">
      <h1 class="mt-3 text-center">
        Seus livros favoritos! <br />
        Com o marca página do seu estilo!
      </h1>
      <!--Barra de Busca e Filtros-->
      <form>
        <div class="input-group mt-5">
          <input
            type="text"
            class="form-control"
            name="searchQuery"
            placeholder="Pesquise por um livro"
            value="<%= filters.searchQuery %>"
          />
          <button class="btn btn-dark ms-2" type="submit">
            Pesquisar / Filtrar
          </button>
        </div>
        <div class="row">
          <div class="mt-3 col-md-6">
            <label for="filter-category" class="form-label"
              >Filtre por categoria</label
            >
            <select
              class="form-select"
              id="filter-category"
              name="category"
              value="<%= filters.category %>"
            >
              <option 
              value="" 
              <%= !filters.category ? 'selected' : '' %> 
              disabled>
                Selecione uma categoria
              </option>
              <% categories.forEach(category => { %>
              <option
                value="<%= category.id %>"
                <%= parseInt(filters.category) === category.id ? 'selected' : '' %>
              >
                <%= category.name %>
              </option>
              <% }) %>
            </select>
          </div>
          <div class="mt-3 col-md-6">
            <label for="filter-author" class="form-label"
              >Filtre por autor</label
            >
            <select class="form-select" id="filter-author" name="author">
              <option 
                value="" 
                <%= !filters.author ? 'selected' : '' %> 
                disabled>
                Selecione um autor
              </option>
              <% authors.forEach(author => { %>
              <option
                value="<%= author.id %>"
                <%= parseInt(filters.author) === author.id ? 'selected' : '' %>
              >
                <%= author.name %>
              </option>
              <% }) %>
            </select>
          </div>
          <div class="mt-3 col-md-6">
            <label for="filter-price" class="form-label"
              >Filtre por preço</label
            >
            <div class="row">
              <div class="col-6">
                <input
                  type="number"
                  class="form-control"
                  id="filter-price-min"
                  placeholder="Mínimo"
                  name="minPrice"
                  value="<%= filters.minPrice %>"
                />
              </div>
              <div class="col-6">
                <input
                  type="number"
                  class="form-control"
                  id="filter-price-max"
                  placeholder="Máximo"
                  name="maxPrice"
                  value="<%= filters.maxPrice %>"
                />
              </div>
            </div>
          </div>
        </div>
      </form>
      <% if (Object.keys(filters).length > 1) { %>
      <form action="/books" method="GET">
        <button class="btn btn-outline-dark mt-4" type="submit">
          Limpar Filtros
        </button>
      </form>
      <% } %>
      <!--Vitrine-->
      <section class="row mt-5">
        <div class="d-flex flex-wrap justify-content-between">
          <% books.forEach(book => { %>
          <div class="card book-shelf-item mb-5">
            <img
              src="<%= book.cover %>"
              class="card-img-top"
              alt="Capa do Livro"
              loading="lazy"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text fst-italic">Autor: <%= book.author %></p>
              <p class="card-text"><%= book.description %></p>
              <p class="card-text fw-bold mt-auto">R$ <%= book.price %></p>
              <a href="/books/<%= book.id %>" class="btn btn-dark">Comprar</a>
            </div>
          </div>
          <% }) %>
        </div>
      </section>
      <!--Busca Vazia-->
      <% if (books.length === 0 && Object.keys(filters).length > 1) { %>
      <div class="alert alert-warning mt-5" role="alert">
        Nenhum livro encontrado com os filtros aplicados.
      </div>
      <% } %>
    </main>
  </body>
   <!--Bootstrap JS-->
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</html>
