<html lang="pt-br">
  <head>
    <title>BookMark</title>
    <!--Meta Tags-->
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Bootstrap CSS-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/checkout.css" />
  </head>
  <body>
    <!--Header-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a href="/" class="navbar-brand">BookMark</a>
        </div>
      </nav>
    </header>
    <!--Conteudo-->
    <main class="container">
      <h1 class="mt-3 text-center">
        Escolha seu marca página<br />personalizado!!
      </h1>
      <form method="POST" action="/checkout/bookmark">
        <div class="row mt-3">
          <div class="col-6 mb-3">
            <div class="input-group">
              <label class="input-group-text" for="style-bookmark">
                Selecione o estilo do marca página.
              </label>
              <select
                class="form-select"
                id="style-bookmark"
                name="bookmarkStyle"
              >
                <option selected disabled>Escolha...</option>
                <% bookmarkStyles.forEach((style) => { %>
                <option value="<%= style %>"><%= style %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="col-6 mb-3">
            <div class="input-group">
              <label class="form-label" for="text-bookmark">
                Insira o texto do marca página. Os textos sugeridos foram
                gerados por IA. Porém você pode inserir o texto que desejar.
              </label>
              <div class="d-flex flex-column">
                <% aiBookmarkTexts.forEach((text) => { %>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="text"
                    id="text-<%= text %>"
                    value="<%= text %>"
                  />
                  <label class="form-check-label" for="text-<%= text %>">
                    <%= text %>
                  </label>
                </div>
                <% }) %>
                <input
                  placeholder="Insira o texto do marca página"
                  type="text"
                  class="form-control mt-2"
                  id="text-bookmark"
                  name="customText"
                />
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-3">Continuar</button>
        </div>
      </form>
      <% if (error) { %>
      <div class="alert alert-danger mt-3" role="alert"><%= error %></div>
      <% } %>
    </main>
  </body>
  <!--Bootstrap JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</html>
