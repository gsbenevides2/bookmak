<html lang="pt-br">
  <head>
    <title>BookMark</title>
    <!--Meta Tags-->
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Bootstrap CSS-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/checkout.css" />
  </head>
  <body>
    <!--Header-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a href="/" class="navbar-brand">BookMark</a>
        </div>
      </nav>
    </header>
    <!--Conteudo-->
    <main class="container mb-5">
      <h1 class="mt-3 text-center">Endereço</h1>
      <% if(error) { %>
      <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } %>
      <!---->
      <form method="POST">
        <p>Escolha um dos endereços cadastrados ou cadastre um novo</p>
        <div class="mb-3">
          <label for="selectedAddress" class="form-label"
            >Escolha um endereço cadastrado:</label
          >
          <select
            class="form-select"
            id="selectedAddress"
            name="selectedAddress"
          >
            <option value="" selected>Selecione um endereço</option>
            <% addresses.forEach((address) => { %>
            <option value="<%= address.id %>"><%= address.nickname %></option>
            <% }) %>
          </select>
        </div>
        <p class="text-center">Ou cadastre um novo endereço:</p>
        <div class="mb-3">
          <label for="nickname" class="form-label">Apelido</label>
          <input
            type="text"
            class="form-control"
            id="nickname"
            name="nickname"
          />
        </div>
        <div class="mb-3">
          <label for="typeOfResidence" class="form-label"
            >Tipo de Residencia</label
          >
          <select
            class="form-select"
            id="typeOfResidence"
            name="typeOfResidence"
          >
            <option value="" selected>Selecione um tipo de residência</option>
            <option value="Casa">Casa</option>
            <option value="Apartamento">Apartamento</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="typeOfStreat" class="form-label"
            >Tipo de Logradouro</label
          >
          <select class="form-select" id="typeOfStreat" name="typeOfStreat">
            <option value="" selected>Selecione um tipo de logradouro</option>
            <option value="Rua">Rua</option>
            <option value="Avenida">Avenida</option>
            <option value="Alameda">Alameda</option>
            <option value="Travessa">Travessa</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="streat" class="form-label">Logradouro</label>
          <input type="text" class="form-control" id="streat" name="streat" />
        </div>
        <div class="mb-3">
          <label for="number" class="form-label">Número</label>
          <input type="text" class="form-control" id="number" name="number" />
        </div>
        <div class="mb-3">
          <label for="district" class="form-label">Bairro</label>
          <input
            type="text"
            class="form-control"
            id="district"
            name="district"
          />
        </div>
        <div class="mb-3">
          <label for="code" class="form-label">CEP</label>
          <input type="text" class="form-control" id="code" name="code" />
        </div>
        <div class="mb-3">
          <label for="city" class="form-label">Cidade</label>
          <input type="text" class="form-control" id="city" name="city" />
        </div>
        <div class="mb-3">
          <label for="state" class="form-label">Estado</label>
          <input type="text" class="form-control" id="state" name="state" />
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">País</label>
          <input type="text" class="form-control" id="country" name="country" />
        </div>
        <div class="mb-3">
          <label for="observation" class="form-label">Observação</label>
          <textarea
            class="form-control"
            id="observation"
            name="observation"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Continuar</button>
      </form>
    </main>
    <!--Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
