<html lang="pt-br">
  <head>
    <title>bookmak</title>
    <!--Meta Tags-->
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Bootstrap CSS-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/checkout.css" />
  </head>
  <style>
    .book-cover {
      width: 100px;
      height: 150px;
      object-fit: cover;
    }
  </style>
  <body>
    <!--Header-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a href="/" class="navbar-brand">Bookmak</a>
        </div>
      </nav>
    </header>
    <!--Conteudo-->
    <main class="container mb-5">
      <h1 class="mt-3 text-center">Detalhes do Pedido</h1>

      <div class="mt-3 border p-3">
        <h5>
          ID:
          <%= id %>
        </h5>
        <h5>Status:</h5>
        <p class="mt-0 status"><%= formatOrderStatus(status) %></p>
        <h5>Histórico</h5>
        <p class="mt-0 statusObs"><%- statusObservation.join("<br>") %></p>
        
        <div class="d-flex justify-content-between">
          <%- status === OrderStatusEnum.PROCESSING ? `
          <a href="/admin/order/${id}/aprovePayment" class="btn btn-outline-secondary mt-2 aprovePayment">Pagamento Recebido</a>
          <a href="/admin/order/${id}/rejectPayment" class="btn btn-outline-secondary mt-2 rejectPayment">Recusar Pagamento</a>
          ` : '' %>
          <%- status === OrderStatusEnum.EXCHANGING ? `
          <a href="/admin/order/${id}/change" class="btn btn-outline-secondary mt-2 change">Trocar Pedido</a>
          <a href="/admin/order/${id}/cancelChange" class="btn btn-outline-secondary mt-2 cancelChange">Cancelar Troca</a>
          ` : '' %>
          <%- status === OrderStatusEnum.PAYMENT_APPROVED ? `
          <a href="/admin/order/${id}/startPreparing" class="btn btn-outline-secondary mt-2 startPreparing">Iniciar Preparação</a>
          ` : '' %>
          <%- status === OrderStatusEnum.PREPARING ? `
          <a href="/admin/order/${id}/sendOrder" class="btn btn-outline-secondary mt-2 sendOrder">Enviar Pedido</a>
          ` : '' %>
          <%- status === OrderStatusEnum.SENDING ? `
          <a href="/admin/order/${id}/sendedOrder" class="btn btn-outline-secondary mt-2 sendedOrder">Confirmar Entrega</a>
          ` : '' %>
        </div>
      
      </div>
      <!--Lista de Produtos-->
      <ul class="list-group mt-3 border p-3">
        <h5>Lista de Produtos:</h5>
        <% cartItens.forEach((cartItem) => { %>
        <li class="list-group-item d-flex align-items-center border-0">
          <img
            src="<%= cartItem.book.cover %>"
            alt="<%= cartItem.book.title %>"
            class="me-3 book-cover cursor-pointer"
            role="button"
          />
          <div class="d-flex flex-column">
            <h6 class="fw-bold"><%- cartItem.book.title %></h6>
            <p>Autor: <%- cartItem.book.author %></p>
            <p>
              Preço Unitário: <%= formatPrice(cartItem.book.price) %>
              <br />Quantidade:
              <%- cartItem.quantity %>
              <br />Subtotal:
              <%= formatPrice(cartItem.subtotal) %>
            </p>
          </div>
        </li>
        <% }) %>
      </ul>
      <!--Dados do Cliente-->
      <div class="mt-3 border p-3">
        <h5>Dados do Cliente:</h5>
        <div class="row">
          <div class="col-7 name">Nome: <%= account.name %></div>
          <div class="col-5 email">Email: <%= account.email %></div>
          <div class="col-7 cpf">CPF: <%= maskCPF(account.cpf) %></div>
          <div class="col-5 dateOfBirth">
            Data de Nascimento: <%= maskDate(account.dateOfBirth) %>
          </div>
        </div>
      </div>
      <!--Endereço de Envio-->
      <div class="mt-3 border p-3">
        <h5 class="deliveryAddressNickname">
          Endereço de Envio: <%- deliveryAddress.nickname %>
        </h5>
        <p class="mb-0 deliveryAddress">
          <%= maskAddresss(deliveryAddress) %><br />
          Observações:
          <%- deliveryAddress.observations %>
        </p>
      </div>
      <!--Endereço de Cobrança-->
      <div class="mt-3 border p-3">
        <h5 class="billingAddressNickname">
          Endereço de Cobrança: <%- billingAddress.nickname %>
        </h5>
        <p class="mb-0 billingAddress">
          <%= maskAddresss(billingAddress) %><br />
          Observações:
          <%- billingAddress.observations %>
        </p>
      </div>
      <!--Cupom-->
      <div class="mt-3 border p-3">
        <h5>Cupons:</h5>

        <div class="row">
          <div class="mb-0 d-flex justify-content-between">
            <p class="mb-0">Cupon 1</p>
          </div>
        </div>
      </div>
      <!--Resumo-->
      <div class="mt-3 border p-3 sumarizer">
        <h5>Resumo:</h5>
        <div class="row">
          <div class="col-6">Subtotal</div>
          <div class="col-6 text-end subtotal">
            <%- formatPrice(subTotal) %>
          </div>
          <div class="col-6">Frete</div>
          <div class="col-6 text-end shippingPrice">
            <%- formatPrice(shippingPrice) %>
          </div>
          <div class="col-6">Desconto</div>
          <div class="col-6 text-end discount">R$ 0,00</div>
          <div class="col-6">Total</div>
          <div class="col-6 text-end totalPrice">
            <%- formatPrice(totalPrice) %>
          </div>
        </div>
        </div>
      </div>
      <!--Pagamento-->
      <div class="mt-3 border p-3">
        <h5>Pagamento:</h5>
        <p class="mb-0 card"><%= card.number %> - <%= card.flag %></p>
      </div>
    </main>
    <!--Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
