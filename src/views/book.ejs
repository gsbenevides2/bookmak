<html>
  <head>
    <title>bookmak</title>
    <!--Meta Tags-->
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Bootstrap CSS-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!--Header-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a href="/" class="navbar-brand">Bookmak</a>
          <div class="d-flex justify-content-end gap-1">
          <a href="/accounts/me" class="btn btn-outline-light">Minha Conta</a>
          <a href="/checkout/cart" class="btn btn-outline-light">Carrinho</a>
          </div>
        </div>
      </nav>
    </header>
    <!--Conteudo-->
    <main class="container mt-5 mb-5">
      <div class="row">
        <img
          class="col-6 w-25 mx-auto"
          src="<%= book.cover %>"
          alt="<%= book.title %>"
        />
        <div class="col-6">
          <h1 class="mt-3"><%= book.title %></h1>
          <p class="mt-3"><%= book.description %></p>
          <p class="mt-3 mb-0">Autor: <%= book.author %></p>
          <p class="">Categoria: <%= book.category %></p>
          <p class="mt-3">R$ <%= book.price %></p>
          <form action="/checkout/cart" method="POST">
            <input type="hidden" name="action" value="ADD" />
            <input type="hidden" name="bookId" value="<%= book.id %>" />
            <div class="mb-3">
              <label for="quantity" class="form-label">Quantidade</label>
              <input
                type="number"
                class="form-control"
                id="quantity"
                name="quantity"
                value="1"
                min="1"
                
                required
              />
            </div>
            <input type="hidden" name="productId" value="<%= book.id %>" />
            <button type="submit" class="btn btn-dark">Adicionar ao Carrinho</button>
          </form>
      </div>
    </main>
  </body>
   <!--Bootstrap JS-->
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</html>
