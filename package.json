{
  "name": "bookmak",
  "version": "0.0.1",
  "description": "A Ecommerce of books with AI personalized bookmarks",
  "main": "dist/index.js",
  "repository": "git@github.com:gsbenevides2/bookmak.git",
  "author": "Guilherme da Silva Benevides <gsbenevides2@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "dotenvx run --env-file=.env.production -- node dist/index.js",
    "start:watch": "nodemon --watch src --ext \"*\" --exec \"npm run build && npm run start\"",
    "test": "dotenvx run --env-file=.env.test -- node dist/index.js",
    "test:watch": "nodemon --watch src --ext \"*\" --exec \"npm run build && npm run test\"",
    "dev": "dotenvx run --env-file=.env.development -- nodemon dist/index.js",
    "dev:watch": "nodemon --watch dist --ext \"*\" --exec \"npm run dev\"",
    "build": "rm dist -rf && tsc && cp -r src/views dist/views && cp -r src/public dist/public",
    "build:watch": "nodemon --watch src --ext \"*\" --exec \"npm run build\"",
    "cypress:open": "cypress open --config-file src/cypress/cypress.config.ts",
    "cypress:run": "cypress run --config-file src/cypress/cypress.config.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.25",
    "@types/pg": "^8.11.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "cypress": "^13.7.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-ejs": "^0.0.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "prettier-plugin-ejs": "^1.0.3",
    "typescript": "*"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^0.27.1",
    "cookie-parser": "^1.4.6",
    "cypress-promise": "^1.1.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.18.3",
    "express-minify-html": "^0.12.0",
    "express-minify-html-2": "^2.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20"
  }
}
